---
import Layout from '../../layouts/Layout.astro';
import Header from "../../components/Header/Header.astro";
import Experience from "../../components/Experiences/Experiences.astro";
import Contact from "../../components/Contact/Contact.astro";

export const prerender = true;

export function getStaticPaths() {
	return [
		{params: {locale: 'en'}},
		{params: {locale: 'es'}},
	];
}
---

<Layout title="@jmartinez3421 - Portfolio">
	<main>
		<Header />
		<Experience />
		<Contact />
	</main>
</Layout>

<style>
	main {
		position: absolute;
		inset: 0;
		overflow-y: auto;
		overflow-x: hidden;

		scroll-behavior: smooth;
	}
</style>
