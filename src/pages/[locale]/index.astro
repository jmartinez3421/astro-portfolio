---
import Layout from '../../layouts/Layout.astro';
import Header from "../../components/Header/Header.astro";
import Experience from "../../components/Experiences/Experiences.astro";

export const prerender = true;

export function getStaticPaths() {
	return [
		{params: {locale: 'en'}},
		{params: {locale: 'es'}},
	];
}
---

<Layout title="@jmartinez3421 - Portfolio">
	<main>
		<Header />
		<Experience />
	</main>
</Layout>

<style>
	main {
		position: absolute;
		inset: 0;
		overflow-y: auto;
		overflow-x: hidden;
	}
</style>
