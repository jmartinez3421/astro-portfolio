---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import BottomLightDivider from "../BottomLightDivider.astro";
import experiences from "/public/data/experiences.json";
import ExperienceCard from "./ExperienceCard.astro";
import { Experience } from "../../models/Experience";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const experiencesList = experiences[lang] as Experience[];

---

<section id="projects">
    <h1 class="title">{t("experience.title")}</h1>
    <h2 class="subtitle">{t("experience.subtitle")}</h2>

    <div class="cards-container">
        {experiencesList.map(({ company, dates, title, image, description }) => (
            <ExperienceCard company={company} title={title} dates={dates} description={description} image={image} />
        ))}
    </div>

    <BottomLightDivider inverted={true} />
</section>

<style>
    section {
        position: relative;
        background: linear-gradient(to bottom, var(--color-surface) 0%, var(--color-surface) calc(100% - 11.5rem), transparent calc(100% - 11.5rem), transparent 100%);
        padding: 8rem 8rem 19.5rem 8rem;
        margin-top: -1px;
    }

    .title {
        font-size: 6rem;
        font-weight: 700;
        color: var(--color-primary);
    }

    .subtitle {
        font-size: 2.8rem;
        margin-top: 2rem;
        font-weight: 500;
    }

    p {
        font-size: 2.4rem;
        font-weight: 500;
        margin-top: 2rem;
        display: flex;
        align-items: center;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 1500px;
        margin: 6rem auto 0 auto;
        gap: 6rem;
    }

    @media (min-width: 1600px) {
        .cards-container {
            gap: 12rem;
        }
    }
</style>
